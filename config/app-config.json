{
  "base": [
    "/"
  ],
  "meta": {
    "name": "Availy",
    "description": "Benjamin Nowack's availability",
    "version": "0.1.0",
    "language": "en",
    "type" : {
      "facebook": "website",
      "schema": "WebSite"
    },
    "url": "http://availy.bnowack.de",
    "titleSuffix": " - Benjamin Nowack",
    "robots": "index,follow",
    "viewport": "width=device-width, initial-scale=1"
  },
  "icons": {
    "browser": "favicon.ico",
    "app": "src/Availy/Application/img/touch-icon.png",
    "facebook": "src/Availy/Application/img/touch-icon.png",
    "schema": "src/Availy/Application/img/touch-icon.png"
  },
  "templates": {
    "page": "src/Availy/Application/templates/page.html.twig"
  },
  "startupBgColor": "#fff",
  "sharedStylesHref": "src/Availy/Application/elements/availy-shared-styles.html",
  "routes": {
    "/": {
      "call": "Polymorph\\Application\\ApplicationController::handleTemplateRequest",
      "template": "Polymorph/Application/templates/content.html.twig",
      "pageTitle": "Availy",
      "element": "src/Availy/Application/elements/availy-calendar.html",
      "elementData": {
        "allocationsHref": "/data/allocations.json",
        "vacationsHref": "/data/vacations.json"
      }
    }
  }
}
